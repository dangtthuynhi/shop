<% if (pages> 0) { %>
    <ul class="pagination toolbox-item">
        <% if (current==1) { %>
            <li class="page-item disabled"><a class="page-link page-link-btn"><i class="icon-angle-left"></i></a></li>
            <% } else { %>
                <li class="page-item">
                    <a class="page-link" href="<%=home%>page=1"><i class="icon-angle-left"></i></a>
                </li>
                <% } %>
                    <% var i=(Number(current)> 5 ? Number(current) - 4 : 1) %> <% if (i !==1) { %>
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                            <% } %>
                                <% for (; i <=(Number(current) + 4) && i <=pages; i++) { %>
                                    <% if (i==current) { %>
                                        <li class="page-item active"><a class="page-link">
                                                <%= i %>
                                            </a></li>
                                        <% } else { %>
                                            <li class="page-item">
                                                <a class="page-link" href="<%=home%>page=<%= i %>">
                                                    <%= i %>
                                                </a>
                                            </li>
                                            <% } %>
                                                <% if (i==Number(current) + 4 && i < pages) { %>
                                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                                    <% } %>
                                                        <% } %>
                                                            <% if (current==pages) { %>
                                                                <li class="page-item disabled"><a
                                                                        class="page-link"><i class="icon-angle-right"></i></a></li>
                                                                <% } else { %>
                                                                    <li class="page-item">
                                                                        <a class="page-link"
                                                                            href="<%=home%>page=<%= pages %>"><i class="icon-angle-right"></i></a>
                                                                    </li>
                                                                    <% } %>
    </ul>
    <% } %>