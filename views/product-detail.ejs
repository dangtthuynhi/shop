<%- include ('css.ejs') %>
    <link rel="stylesheet" href="/public/css/style.css">
    <%- include ('header.ejs') %>
        <!-- mt side menu start here -->
        <!-- mt search popup start here -->
        <%- include ('search.ejs') %>
            <!-- mt search popup end here -->
            <!-- mt main start here -->
            <main id="mt-main">
                <!-- Mt Product Detial of the Page -->
                <section class="mt-product-detial wow fadeInUp" data-wow-delay="0.4s">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-12">
                                <!-- Slider of the Page -->
                                <div class="slider">
                                    <figure class="zoom" style="background:url(<%=product.imagePath%>)"
                                        onmousemove="zoom(event)" ontouchmove="zoom(event)">
                                        <img src="<%=product.imagePath%>" />
                                    </figure>
                                </div>
                                <div class="detial-holder">
                                    <h2>
                                        <%=product.title%>
                                    </h2>
                                    <div class="txt-wrap">
                                        <%-product.description%>
                                    </div>
                                    <div class="text-holder">
                                        <span class="price">
                                            <%=product.price%> &#x20AB;
                                        </span>
                                    </div>
                                    <!-- Product Form of the Page -->
                                    <form action="/add-to-cart/<%=product._id%>" class="product-form" method="GET">
                                        <fieldset>
                                            <div class="row-val">
                                                <label for="qty">Số lượng</label>
                                                <input name="qty" type="number" id="qty" placeholder="1" min="1"
                                                    value="1">
                                            </div>
                                            <div class="row-val">
                                                <button type="submit">THÊM VÀO GIỎ</button>
                                            </div>
                                        </fieldset>
                                    </form>
                                    <!-- Product Form of the Page end -->
                                </div>
                                <!-- Detail Holder of the Page end -->
                            </div>
                        </div>
                    </div>
                </section><!-- Mt Product Detial of the Page end -->
                <!-- related products start here -->
                <div class="related-products wow fadeInUp" data-wow-delay="0.4s">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-12">
                                <br>
                                <h2>GỢI Ý CHO BẠN</h2>
                                <div class="row">
                                    <div class="col-xs-12">
                                        <% relatedProducts.forEach((item)=>{ %>
                                            <!-- mt product1 center start here -->
                                            <div class="mt-product1 mt-paddingbottom20">
                                                <div class="box">
                                                    <div class="b1">
                                                        <div class="b2">
                                                            <a href="/products/<%=item.category.slug%>/<%=item._id%>"><img
                                                                    src="<%=item.imagePath%>"
                                                                    alt="image description"></a>
                                                            <!-- <ul class="mt-stars">
                                                        <li><i class="fa fa-star"></i></li>
                                                        <li><i class="fa fa-star"></i></li>
                                                        <li><i class="fa fa-star"></i></li>
                                                        <li><i class="fa fa-star-o"></i></li>
                                                    </ul> -->
                                                            <!-- <ul class="links">
                                                        <li><a href="#"><i class="icon-handbag"></i><span>Thêm vào giỏ</span></a></li>
                                                        <li><a href="#"><i class="icomoon icon-heart-empty"></i></a>
                                                        </li>
                                                        <li><a href="#"><i class="icomoon icon-exchange"></i></a></li>
                                                    </ul> -->
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="txt">
                                                    <strong class="title"><a
                                                            href="/products/<%=item.category.slug%>/<%=item._id%>">
                                                            <%=item.title%>
                                                        </a></strong>
                                                    <span class="price">
                                                        <!-- <i class="fa fa-eur"></i>  -->
                                                        <%=item.price%> &#x20AB;
                                                    </span>
                                                </div>
                                            </div>
                                            <%})%>
                                                <!-- mt product1 center end here -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- related products end here -->
                </div>
            </main><!-- mt main end here -->
            <!-- footer of the Page -->
            <%- include ('footer.ejs') %>
                <script>
                    function zoom(e) {
                        var zoomer = e.currentTarget;
                        e.offsetX ? offsetX = e.offsetX : offsetX = e.touches[0].pageX
                        e.offsetY ? offsetY = e.offsetY : offsetX = e.touches[0].pageX
                        x = (offsetX / zoomer.offsetWidth) * 100
                        y = (offsetY / zoomer.offsetHeight) * 100
                        zoomer.style.backgroundPosition = x + "% " + y + "%";
                    }
                </script>
                <%- include ('js.ejs') %>