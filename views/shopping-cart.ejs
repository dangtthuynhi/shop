      <!-- Mt Process Section of the Page -->
      <div class="mt-process-sec wow fadeInUp" data-wow-delay="0.4s">
        <div class="container">
          <div class="row">
            <div class="col-xs-12">
              <ul class="list-unstyled process-list">
                <li class="active">
                  <span class="counter">01</span>
                  <strong class="title">Giỏ hàng</strong>
                </li>
                <li>
                  <span class="counter">02</span>
                  <strong class="title">Thanh toán</strong>
                </li>
                <li>
                  <span class="counter">03</span>
                  <strong class="title">Order Complete</strong>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div><!-- Mt Process Section of the Page end -->
      <!-- Mt Product Table of the Page -->
      <div class="mt-product-table wow fadeInUp" data-wow-delay="0.4s">
        <div class="container">
          <div class="row border">
            <div class="col-xs-12 col-sm-6">
              <strong class="title">SẢN PHẨM</strong>
            </div>
            <div class="col-xs-12 col-sm-2">
              <strong class="title">ĐƠN GIÁ</strong>
            </div>
            <div class="col-xs-12 col-sm-2">
              <strong class="title">SỐ LƯỢNG</strong>
            </div>
            <div class="col-xs-12 col-sm-2">
              <strong class="title">THÀNH TIỀN</strong>
            </div>
          </div>
          <% if (cart !=null) { %>
            <% products.forEach((product)=>{ %>
              <div class="row border">
                <div class="col-xs-12 col-sm-2">
                  <div class="img-holder">
                    <img src="<%=product.imagePaths[0]%>" alt="image description">
                  </div>
                </div>
                <div class="col-xs-12 col-sm-4">
                  <strong class="product-name">
                    <%=product.title%>
                  </strong>
                </div>
                <div class="col-xs-12 col-sm-2">
                  <strong class="price">
                    <!-- <i class="fa fa-eur"></i> -->
                    <%=product.price%> &#x20AB;
                  </strong>
                </div>
                <div class="col-xs-12 col-sm-2">
                  <strong class="product-name">
                    <%=product.qty%>
                  </strong>
                </div>
                <div class="col-xs-12 col-sm-2">
                  <strong class="price">
                    <!-- <i class="fa fa-eur"></i> -->
                    <%= product.totalPrice %> &#x20AB;
                  </strong>
                  <a href="/removeAll/<%= product._id %>"><i class="fa fa-close"></i></a>
                </div>
              </div>
              <%})%>
                <div class="row border">
                  <div class="col-xs-12 col-sm-2">
                    <strong class="product-name">
                      TỔNG
                    </strong>
                  </div>
                  <div class="col-xs-12 col-sm-4">
                  </div>
                  <div class="col-xs-12 col-sm-2">
                  </div>
                  <div class="col-xs-12 col-sm-2">
                  </div>
                  <div class="col-xs-12 col-sm-2">
                    <strong class="price">
                      <!-- <i class="fa fa-eur"></i> -->
                      <%= cart.totalCost %> &#x20AB;
                    </strong>
                    <a href="/checkout"><i class="fa fa-shopping-cart"></i></a>
                  </div>
                </div>
                <%}%>
        </div>
      </div><!-- Mt Product Table of the Page end -->
